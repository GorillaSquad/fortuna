<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="121dp"
        android:layout_height="176dp"
        app:srcCompat="@drawable/ic_happy"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There seems to be a problem with the server"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please watch more ads to prevent this in the future"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="325dp" />

    <Switch
        android:id="@+id/ad_switch"
        android:layout_width="373dp"
        android:layout_height="56dp"
        android:text="Allow Advertisements"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="16dp" />
</android.support.constraint.ConstraintLayout>